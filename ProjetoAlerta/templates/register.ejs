<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>

<body>
    <div class="container d-flex align-items-center justify-content-center" style="height: 100vh;">
        <div class="card" style="width: 18rem;">

            <div class="card-body text-center ">
                <h2 class="card-title mb-4">Cadastre-se</h2>
                <form action="/register" method="POST">
                    <div class="text-start mb-3">
                        <h5>Usu√°rio</h5>
                        <input class="mb-2 form-control" name="name" required value="<%=body.name %>">
                    </div>
                    <div class="text-start mb-3">
                        <h5>Senha</h5>
                        <input class="mb-2 form-control" type="password" name="password" required
                            value="<%=body.password %>">
                    </div>
                    <div class="text-start mb-3">
                        <h5>Email</h5>
                        <input class="mb-2 form-control" name="email" required value="<%=body.email %>">
                    </div>

                    <div class="form-check text-start fw-bold mb-4">
                        <input class="form-check-input" type="checkbox" id="flexCheckMod">
                        <label class="form-check-label" for="flexCheckDefault">
                            Moderador
                        </label>
                    </div>
                    <div class="text-start mb-3" id="campoAdicional" style="display: none;">
                        <h5>ID de moderador:</h5>
                        <input class="mb-2 form-control" name="idmod" id="inputIdMod" value="<%=body.idmod%>">
                    </div>
                    <button class="btn btn-dark mx-auto ps-4 pe-4">Cadastrar</button>
                </form>

            </div>

        </div>
    </div>

    <script>



        const checkboxMod = document.getElementById('flexCheckMod')
        const inputIdMod = document.getElementById('campoAdicional')
        const campoAdicionalInput = document.getElementById('inputIdMod');
     
        


        checkboxMod.addEventListener('change', () => {
  
            campoAdicionalInput.required = false;
            campoAdicional.style.display = checkboxMod.checked ? 'block' : 'none'
            if (checkboxMod.checked) {
                campoAdicionalInput.required = true;
            }
            if (!checkboxMod.checked) {
                campoAdicionalInput.value = "";
            }
        })

        

    </script>
</body>

</html>